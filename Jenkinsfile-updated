pipeline {
    agent {
        kubernetes {
            yamlFile 'jenkins-dind-pod-template.yaml'
        }
    }
    
    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        ECR_REGISTRY = '123456789012.dkr.ecr.us-east-1.amazonaws.com'
        EKS_CLUSTER_NAME = 'your-eks-cluster'
        BUILD_NUMBER = "${env.BUILD_NUMBER}"
    }
    
    stages {
        stage('üîç Environment Setup') {
            steps {
                container('jenkins-agent') {
                    script {
                        echo "=== STAGE 1: ENVIRONMENT SETUP ==="
                        sh '''
                            echo "üìã System Information:"
                            whoami
                            pwd
                            echo "Build: ${BUILD_NUMBER}"
                            
                            echo "üîß Tool Verification:"
                            docker --version
                            aws --version
                            kubectl version --client
                            
                            echo "‚úÖ Stage 1 completed successfully"
                        '''
                    }
                }
            }
        }
        
        stage('üì• Code Checkout') {
            steps {
                container('jenkins-agent') {
                    script {
                        echo "=== STAGE 2: CODE CHECKOUT ==="
                        checkout scm
                        sh '''
                            echo "üìÇ Repository Information:"
                            git remote -v
                            git log --oneline -3
                            
                            echo "üìÅ Project Structure:"
                            ls -la
                            find . -name "Dockerfile" -type f
                            
                            echo "‚úÖ Stage 2 completed successfully"
                        '''
                    }
                }
            }
        }
        
        stage('üèóÔ∏è Build Images') {
            parallel {
                stage('Build Frontend') {
                    steps {
                        container('jenkins-agent') {
                            script {
                                sh '''
                                    echo "üèóÔ∏è Building Frontend..."
                                    cd frontend
                                    docker build -t voting-app:frontend-${BUILD_NUMBER} .
                                    echo "‚úÖ Frontend build completed"
                                '''
                            }
                        }
                    }
                }
                stage('Build Backend') {
                    steps {
                        container('jenkins-agent') {
                            script {
                                sh '''
                                    echo "üèóÔ∏è Building Backend..."
                                    cd backend
                                    docker build -t voting-app:backend-${BUILD_NUMBER} .
                                    echo "‚úÖ Backend build completed"
                                '''
                            }
                        }
                    }
                }
                stage('Build Worker') {
                    steps {
                        container('jenkins-agent') {
                            script {
                                sh '''
                                    echo "üèóÔ∏è Building Worker..."
                                    cd worker
                                    docker build -t voting-app:worker-${BUILD_NUMBER} .
                                    echo "‚úÖ Worker build completed"
                                '''
                            }
                        }
                    }
                }
            }
        }
        
        stage('üì§ Push to ECR') {
            steps {
                container('jenkins-agent') {
                    script {
                        withCredentials([aws(credentialsId: 'aws-credentials', region: 'us-east-1')]) {
                            sh '''
                                echo "üì§ Pushing to ECR..."
                                
                                # Login to ECR
                                aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                                
                                # Tag and push images
                                docker tag voting-app:frontend-${BUILD_NUMBER} ${ECR_REGISTRY}/voting-app:frontend-${BUILD_NUMBER}
                                docker tag voting-app:backend-${BUILD_NUMBER} ${ECR_REGISTRY}/voting-app:backend-${BUILD_NUMBER}
                                docker tag voting-app:worker-${BUILD_NUMBER} ${ECR_REGISTRY}/voting-app:worker-${BUILD_NUMBER}
                                
                                docker push ${ECR_REGISTRY}/voting-app:frontend-${BUILD_NUMBER}
                                docker push ${ECR_REGISTRY}/voting-app:backend-${BUILD_NUMBER}
                                docker push ${ECR_REGISTRY}/voting-app:worker-${BUILD_NUMBER}
                                
                                echo "‚úÖ All images pushed to ECR"
                            '''
                        }
                    }
                }
            }
        }
        
        stage('üöÄ Deploy to EKS') {
            steps {
                container('jenkins-agent') {
                    script {
                        withCredentials([aws(credentialsId: 'aws-credentials', region: 'us-east-1')]) {
                            sh '''
                                echo "üöÄ Deploying to EKS..."
                                
                                # Update kubeconfig
                                aws eks update-kubeconfig --region ${AWS_DEFAULT_REGION} --name ${EKS_CLUSTER_NAME}
                                
                                # Update image tags in k8s manifests
                                sed -i "s|image: .*frontend.*|image: ${ECR_REGISTRY}/voting-app:frontend-${BUILD_NUMBER}|g" k8s/frontend.yaml
                                sed -i "s|image: .*backend.*|image: ${ECR_REGISTRY}/voting-app:backend-${BUILD_NUMBER}|g" k8s/backend.yaml
                                sed -i "s|image: .*worker.*|image: ${ECR_REGISTRY}/voting-app:worker-${BUILD_NUMBER}|g" k8s/worker.yaml
                                
                                # Apply manifests
                                kubectl apply -f k8s/
                                
                                # Wait for deployment
                                kubectl rollout status deployment/frontend
                                kubectl rollout status deployment/backend
                                kubectl rollout status deployment/worker
                                
                                echo "‚úÖ Deployment completed"
                            '''
                        }
                    }
                }
            }
        }
        
        stage('üìä Verification') {
            steps {
                container('jenkins-agent') {
                    script {
                        sh '''
                            echo "üìä Verifying deployment..."
                            kubectl get pods
                            kubectl get services
                            echo "‚úÖ Verification completed"
                        '''
                    }
                }
            }
        }
    }
    
    post {
        always {
            container('jenkins-agent') {
                script {
                    sh '''
                        echo "üßπ Cleaning up..."
                        docker system prune -f || true
                    '''
                }
            }
        }
        success {
            echo "‚úÖ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
